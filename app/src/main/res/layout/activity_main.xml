<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
    />
    <EditText
            android:id="@+id/movie_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter the title of movie"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
    />
    <EditText
            android:id="@+id/movie_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter a short description of the movie"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Language"
    />
    <RadioGroup
            android:id="@+id/movie_language"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RadioButton
                android:id="@+id/lang_eng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="English"
        />
        <RadioButton
                android:id="@+id/lang_chi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chinese"
        />
        <RadioButton
                android:id="@+id/lang_malay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Malay"
        />
        <RadioButton
                android:id="@+id/lang_tamil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tamil"
        />
    </RadioGroup>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Release date"
    />
    <EditText
            android:id="@+id/movie_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter release date"
    />
    <CheckBox
            android:id="@+id/checkBoxNotSuit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not suitable for all audience"
            android:onClick="notSuitableForAll"
    />
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    <CheckBox
            android:visibility="invisible"
            android:id="@+id/checkBoxViolence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Violence"
    />
    <CheckBox
            android:visibility="invisible"
            android:id="@+id/checkboxLanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Language used"
    />
    </LinearLayout>
    <Button
            android:id="@+id/addmovie_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Add movie"

    />
</LinearLayout>