<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Main5Activity">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
    />
    <EditText
            android:id="@+id/moviename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter the title of movie"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
    />
    <EditText
            android:id="@+id/moviedesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter a short description of the movie"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Language"
    />
    <RadioGroup
            android:id="@+id/movielanguage"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RadioButton
                android:id="@+id/langeng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="English"
        />
        <RadioButton
                android:id="@+id/langchi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chinese"
        />
        <RadioButton
                android:id="@+id/langmalay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Malay"
        />
        <RadioButton
                android:id="@+id/langtamil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tamil"
        />
    </RadioGroup>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Release date"
    />
    <EditText
            android:id="@+id/moviedate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter release date"
    />
    <CheckBox
            android:id="@+id/checkBox_NotSuit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not suitable for all audience"
            android:onClick="notSuitableForAll"
    />
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <CheckBox
                android:visibility="invisible"
                android:id="@+id/checkBox_Violence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Violence"
        />
        <CheckBox
                android:visibility="invisible"
                android:id="@+id/checkbox_Language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Language used"
        />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >
    </LinearLayout>

</LinearLayout>